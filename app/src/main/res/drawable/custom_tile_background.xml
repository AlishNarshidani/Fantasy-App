<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when pressed -->
    <item android:state_pressed="true">
        <bitmap android:src="@drawable/rock"
        android:tint="#80FFFFFF"/>
    </item>

    <!-- Default state -->
    <item>
        <bitmap android:src="@drawable/rock"/>
    </item>
</selector>
