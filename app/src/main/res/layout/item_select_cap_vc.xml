<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Player Image -->
        <ImageView
            android:id="@+id/playerImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/usericon" />

        <!-- Vertical Layout for Name and Role -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Player Name -->
            <TextView
                android:id="@+id/playerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player Name"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp" />

            <!-- Player Role and Country -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/playerRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Role"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/seperator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" | "
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/playerCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>
        </LinearLayout>

        <!-- Selection Radio Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <!-- Captain Radio Button -->
            <RadioButton
                android:id="@+id/radioCaptainButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:layout_marginStart="10dp"
                android:background="@drawable/verified_background"
                android:gravity="center"
                android:text="C"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <!-- Vice-Captain Radio Button -->
            <RadioButton
                android:id="@+id/radioViceCaptainButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:button="@null"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/verified_background"
                android:gravity="center"
                android:text="VC"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#A4A2A2"/>

</LinearLayout>
