<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectCapVc">

    <LinearLayout
        android:layout_margin="4dp"
        android:background="@drawable/gradient_background"
        android:id="@+id/selectedCapVcDisplayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp">

        <LinearLayout
            android:id="@+id/select_caption_vc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">


            <!-- Title -->
            <TextView
                android:id="@+id/select_caption_vc_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Select Captain and Vice-captain"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/selected_cap_vc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <LinearLayout
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/captainImage"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/usericon"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/captainName"
                        android:layout_marginTop="4dp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/gradient_background"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Captain"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <!-- captain 2x pints -->
                    <TextView
                        android:id="@+id/points_2x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:text="2x Points"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />

                </LinearLayout>

            </LinearLayout>

            <!-- Points text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/viceCaptainImage"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/usericon"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/viceCaptainName"
                        android:layout_marginTop="4dp"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/black"
                        android:background="@drawable/gradient_background"
                        android:padding="3dp"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Vice-Captain"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/points_1.5x"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:ellipsize="end"
                        android:text="1.5x Points"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_above="@+id/saveTeam"
        android:layout_below="@+id/selectedCapVcDisplayLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveTeam"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Team"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:elevation="8dp"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/winnings_gradient_background"
        />

</RelativeLayout>