<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FantsyPoint">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fantasy Point System on Cric Mania:"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="4dp"
        android:text="Are you just getting started with Fantasy games? Out Cricmania Cricket fantsy app having an understanding about the points system is the best way to select matches and get started with it. The total points calculated for each match, will be base on information given below. So, pick your game, select your players and map your scorecard as the match results are shown. Also you get understanding on how to play and join contests also you get Player suggestion from our app so play and enjoy."
        android:textSize="18sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/textview2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Batting"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Bowling"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold" />

        <!-- Add your categories and points details here -->

    </LinearLayout>

</RelativeLayout>