<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FE4D0B"
    tools:context=".ViewFullTeamPoints">


        <LinearLayout
            android:id="@+id/mainLayout"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/teampreviewbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Category: Wicket Keepers -->
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WICKET KEEPERS"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/wicketKeepersLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <!-- Category: Batsmen -->
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BATSMAN"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/batsmanLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <!-- Category: All-Rounders -->
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALL-ROUNDERS"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/allRoundersLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

            <!-- Category: Bowlers -->
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOWLERS"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingBottom="8dp"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/bowlersLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FE4D0B"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">

            <!-- Team Rank -->
            <TextView
                android:id="@+id/team_rank_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Player Name -->
            <TextView
                android:id="@+id/user_name_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/team_rank_description"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/team_points_description"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <!-- Team Points -->
            <TextView
                android:id="@+id/team_points_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team points"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp">

            <!-- Team Rank -->
            <TextView
                android:id="@+id/team_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- Player Name -->
            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginStart="64dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toEndOf="@id/team_rank"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/team_points"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>

            <!-- Team Points -->
            <TextView
                android:id="@+id/team_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>



</FrameLayout>