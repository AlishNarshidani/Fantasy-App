<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/winnings_gradient_background"
    android:padding="12dp"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <!-- Prize Pool and Entry Fee -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Prize Pool -->
        <TextView
            android:id="@+id/prizePool"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="₹14 Crores"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- Entry Fee -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/entryFeesBtn"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="₹50"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/gradient_background" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/spotsFilledBar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:progressDrawable="@drawable/progress_bar_custom"
        android:progress="75"
        android:max="100"
        style="?android:attr/progressBarStyleHorizontal"/>

    <!-- Spots left and total spots -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/spotsLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="29,05,944 spots left"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/totalSpots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="39,68,253 spots"
            android:textColor="#595959"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- Icons and details row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- First Place Prize -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/usericon"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/firstPrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1 Crore"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Winning Percentage -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/winnings"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/winningPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6%"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Max Team Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/usericon"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="only 1 team"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Guaranteed Icon -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_verified_24"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guaranteed"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
